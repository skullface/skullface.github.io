---
import Layout from "../layouts/Layout.astro";
const title = "About Skullface";


const valuesAndPractices = [
  {
    value: "Clarity",
    practice: "Showing and telling",
  },
  {
    value: "Inclusivity",
    practice: "Proactive advocacy",
  },
  {
    value: "Irreverence",
    practice: "Play and experimentation",
  },
  {
    value: "Intention",
    practice: "Leading with purpose",
  },
  {
    value: "Openness",
    practice: "Removing barriers to entry",
  },
];
---

<Layout title={title}>
  <main>
    <h1>{title}</h1>
    
    <img alt="" src="./collage.jpg" class="border collage" />

    <div>
      <h2>Values and practices</h2>
      <ul class="values-and-practices">
        {
          valuesAndPractices.map(({ value, practice }) => (
            <li>
              <span class="value">
                {value}
                <span aria-label="via" class="through" />
              </span>
              {practice}
            </li>
          ))
        }
      </ul>
    </div>

    <div>
      <h2>Artist bio</h2>
      <p>
        SKULLFACE is a visual artist who dual wields compassion and cuteness.
        She explore themes of love, justice, and identity as a queer Latina
        via graphic shapes, fun color, and a little cheek. Skullfaceâ€™s work
        mixes digital illustration with block printing and risography to
        mirror her whimsical and radical interior world. She leaves a trail of
        glitter in her wake at her home studio and <a
          href="https://zygotepress.com">Zygote Press</a
        >. Find her personal art and design work at <a
          href="https://falseluck.shop">False Luck</a
        >.
      </p>
    </div>

    <h2>Exhibitions</h2>
    <ul class="md:list-style-none list-disc">
      <li>2016 Moon Prism Power, San Francisco (group show)</li>
      <li>2014 Bit Bash, Chicago (group show)</li>
      <li>2013 Ink Wars, Cleveland (participating artist)</li>
      <li>2013 Weapons of Mass Creation IV, Cleveland (group show)</li>
    </ul>

    <h2>Publications</h2>
    <ul class="md:list-style-none list-disc">
      <li>
        <i>Cards Against Humanity Comic Book #01</i> at SDCC, 2017, contributing
        artist + writer
      </li>
      <li>
        <i>Secret Loves of Geek Girls Redux</i>, Dark Horse, 2017, contributing
        artist + writer
      </li>
      <li>
        <i>Secret Loves of Geek Girls</i>, Dark Horse, 2016, contributing artist
      </li>
    </ul>

    <h2>Speaking</h2>
    <ul class="md:list-style-none list-disc">
      <li>2021 Salary negotiation panelist, Women Who Code Boston</li>
      <li>2020 Unconventional pathways into tech panelist, Code Tenderloin</li>
    </ul>

    <h2>Education and training</h2>
    <ul class="md:list-style-none list-disc">
      <li>
        2024 <i>Power Shift</i> Leadership Accelerator, Active Voice
      </li>
      <li>
        2021 <i>Ethics, Public Policy, Technological Change</i>, Stanford
        University
      </li>
    </ul>

    <h2>Press</h2>
    <ul class="md:list-style-none list-disc">
      <li>Dribbble Timeout interview</li>
      <li>Kickstarter, Fashion campaign feature + Staff Pick</li>
    </ul>
  </main>
</Layout>


<style>
  .values-and-practices {
    list-style: none;
    min-width: 368px;

    li {
      display: flex;
      flex-direction: column;
      @media all and (max-width: 680px) {
        margin-bottom: calc(var(--spacer) * 2);
      }
      @media all and (min-width: 680px) {
        flex-direction: row;
        align-items: center;
      }
      &:nth-of-type(even) .through {
        transform: scaleY(-1);
      }
    }

    .value {
      display: flex;
      font-family: var(--font-family-sans);
      font-weight: 600;
      font-size: 93.75%;
      @media all and (max-width: 680px) {
        margin-bottom: calc(var(--spacer) * 0.5);
      }
      @media all and (min-width: 680px) {
        justify-content: space-between;
        width: 45%;
        padding-right: var(--spacer);
      }
    }

    .through {
      @media all and (min-width: 680px) {
        margin-left: var(--spacer);
        flex: 1;
        background: url("data:image/svg+xml;base64,")
          center right no-repeat;
        background-size: auto 1em;
      }
    }
  }
</style>
